{
    "extends": "../../tsconfig.build.json",

    "compilerOptions": {
        "lib": [
            "ESNext",
            "dom"
        ],
        "outDir": "./dist",
        "importHelpers": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": false,
        "jsx": "preserve",

        "skipLibCheck": true,
        "declaration": true,
        "declarationDir": "dist/types",
        "isolatedModules": true,

        "paths": {
            "@vue-layout/core": ["./packages/core/src"],
            "@vue-layout/hyperscript": ["./packages/hyperscript/src"]
        }
    },
    "exclude": [
        "node_modules",
        "dist"
    ],
    "include": [
        "src/**/*.ts"
    ]
}
