{
    "extends": "../../tsconfig.build.json",

    "compilerOptions": {
        "outDir": "./dist",
        "importHelpers": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": false,
        "jsx": "preserve",
        "lib": ["ESNext", "DOM"],

        "declaration": true,
        "declarationDir": "./dist",
        "skipLibCheck": true,
        "isolatedModules": true
    },
    "exclude": [
        "node_modules",
        "dist"
    ],
    "include": [
        "types/**/*.d.ts",
        "src/**/*.ts"
    ]
}
