{
    "extends": "../../tsconfig.build.json",

    "compilerOptions": {
        "outDir": "./dist",
        "lib": [
            "dom",
            "ESNext",
            "dom.iterable",
            "scripthost"
        ],
        "plugins": [
            {
                "transform":"@zerollup/ts-transform-paths",
                "exclude": ["*"]
            }
        ],
        "importHelpers": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": false,
        "module": "ESNext",
        "jsx": "preserve",

        "declaration": true,
        "declarationDir": "dist/types",
        "isolatedModules": true
    },
    "exclude": [
        "node_modules",
        "dist"
    ],
    "include": [
        "src/types/**/*.d.ts",
        "src/**/*.ts"
    ]
}
