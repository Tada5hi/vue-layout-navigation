{
    "extends": "../../tsconfig.build.json",

    "compilerOptions": {
        "outDir": "./dist",
        "importHelpers": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": false,
        "jsx": "preserve",

        "declaration": true,
        "declarationDir": "dist/types",
        "skipLibCheck": true,
        "isolatedModules": true,

        "paths": {
            "@vue-layout/core": ["./packages/core/src"]
        }
    },
    "exclude": [
        "node_modules",
        "dist"
    ],
    "include": [
        "src/**/*.ts"
    ]
}
