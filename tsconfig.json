{
    "compilerOptions": {
        "target": "ES6",
        "module": "esnext",

        "strict": false,
        "declaration": true,
        "declarationDir": "dist/types",
        "isolatedModules": true,

        "noUnusedLocals": true,
        "noUnusedParameters": true,

        "importHelpers": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": false,
        "baseUrl": ".",
        "newLine": "lf",
        "plugins": [
            {
                "transform":"@zerollup/ts-transform-paths",
                "exclude": ["*"]
            }
        ],
        "lib": [
            "ESNext",
            "dom",
            "dom.iterable",
            "scripthost"
        ],
        "rootDirs": [
            "./src",
            "./dev"
        ],
        "outDir": "./dist",

        "jsx": "preserve"
    },
    "exclude": [
        "node_modules",
        "dist"
    ],
    "include": ["src/**/*.ts"]
}
